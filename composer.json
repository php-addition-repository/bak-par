{
    "name": "par/par",
    "description": "PHP Addition Repository (PAR)",
    "license": "MIT",
    "authors": [
        {
            "name": "Alex Brouwer",
            "email": "brouwer.alexander@gmail.com",
            "role": "lead"
        }
    ],
    "require": {
        "php": "^8.1",
        "ext-intl": "*"
    },
    "require-dev": {
        "phpunit/phpunit": "^9.5",
        "psalm/plugin-phpunit": "^0.18.3",
        "roave/security-advisories": "dev-master",
        "squizlabs/php_codesniffer": "^3.7",
        "symplify/monorepo-builder": "^11.1",
        "vimeo/psalm": "^5.1"
    },
    "autoload": {
        "psr-4": {
            "Par\\Core\\": "packages/core/src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "App\\": "src/",
            "Par\\CoreTest\\": "packages/core/test/"
        }
    },
    "replace": {
        "par/core": "0.4.0"
    },
    "config": {
        "sort-packages": true,
        "platform": {
            "php": "8.1"
        }
    },
    "extra": {
        "branch-alias": {
            "dev-main": "0.4.x-dev"
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}

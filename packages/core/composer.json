{
    "name": "par/core",
    "description": "PHP Addition Repository - Core structures and helpers",
    "type": "library",
    "authors": [
        {
            "name": "Alex Brouwer",
            "email": "brouwer.alexander@gmail.com",
            "role": "lead"
        }
    ],
    "license": "MIT",
    "config": {
        "sort-packages": true,
        "platform": {
            "php": "8.0"
        }
    },
    "require": {
        "php": "^8.0",
        "ext-intl": "*",
        "php-ds/php-ds": "^1.2"
    },
    "autoload": {
        "psr-4": {
            "Par\\Core\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "ParTest\\Core\\": "test/"
        }
    },
    "extra": {
        "branch-alias": {
            "dev-master": "0.2.x-dev"
        }
    }
}
